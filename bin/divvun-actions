#!/usr/bin/env bash

CWD=`pwd`
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
cd $SCRIPT_DIR;

# Check if node_modules exists, otherwise pnpm install
if [ ! -d "$SCRIPT_DIR/node_modules" ]; then
    cd $SCRIPT_DIR;
    pnpm install -s;
fi

export _DIVVUN_ACTIONS_PWD=$CWD;
tsx index.ts "$@"
